<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.map.MapFragment">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
         />
    <Button
        android:layout_below="@id/text_gallery"
        android:id="@+id/line1andline2Buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="16dp"
        android:text="Pune Metro (Purple line and Aqua line)"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:padding="4dp"
        />
    <Button
        android:layout_below="@id/line1andline2Buttom"
        android:id="@+id/line3Butoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="17dp"
        android:text="Pune Metro Line 3 (PMRDA)"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:padding="4dp"
        />

        <FrameLayout
            android:layout_below="@id/line3Butoon"
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line3Butoon"
            >

        </FrameLayout>


</RelativeLayout>